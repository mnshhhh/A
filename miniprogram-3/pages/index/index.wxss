.tabbar{
  z-index: 99;
  width: 100%;
  height: 180rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgb(253, 243, 204);
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding:0 60rpx;
}
.tabbar .item{
  flex: 1;
  color: black;
  height: 100rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 10;

}
.tabbar .item .icontext{
  position: absolute;
  width: 100%;
  bottom: 10rpx;
  text-align: center;
  font-size: 22rpx;
  opacity: 0;
  transition: all .8s;
  transform: scale(0.8);
  width: 100%;
}
.tabbar .item.active .icontext{
  opacity: 1;
  transform: scale(1);
}


.tabbar .item.active .icon{
  color: #3561f5;
  transform: translateY(-55rpx);
}

.tabbar .item .icon{
  font-size: 50rpx!important;
  text-align: center;
  transition: all .8s;
}
